{
    "name": "laminas-api-tools/api-tools-doctrine-querybuilder",
    "description": "Laminas API Tools Doctrine QueryBuilder module",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "api-tools",
        "api",
        "doctrine",
        "filter"
    ],
    "homepage": "https://api-tools.getlaminas.org",
    "support": {
        "docs": "https://api-tools.getlaminas.org/documentation",
        "issues": "https://github.com/laminas-api-tools/api-tools-doctrine-querybuilder/issues",
        "source": "https://github.com/laminas-api-tools/api-tools-doctrine-querybuilder",
        "rss": "https://github.com/laminas-api-tools/api-tools-doctrine-querybuilder/releases.atom",
        "chat": "https://laminas.dev/chat",
        "forum": "https://discourse.laminas.dev"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laminas": {
            "module": [
                "Laminas\\ApiTools\\Doctrine\\QueryBuilder"
            ]
        }
    },
    "require": {
        "php": "^7.4 || ~8.0.0 || ~8.1.0",
        "doctrine/doctrine-module": "^3.0.1 || ^4.1 || ^5.0",
        "laminas-api-tools/api-tools-api-problem": "^1.2.2",
        "laminas-api-tools/api-tools-doctrine": "dev-datasage/php8compatability",
        "laminas-api-tools/api-tools-hal": "^1.4.2",
        "laminas/laminas-hydrator": "^3.0 || ^4.0",
        "laminas/laminas-modulemanager": "^2.7.2",
        "laminas/laminas-mvc": "^2.7.13 || ^3.0.2",
        "laminas/laminas-servicemanager": "^2.7.6 || ^3.1.1"
    },
    "require-dev": {
        "dg/bypass-finals": "^1.4",
        "doctrine/dbal": "^2.12.1 || ^3.0.0",
        "doctrine/doctrine-mongo-odm-module": "^2.0.2 || ^3.0.2 || ^4.0",
        "doctrine/doctrine-orm-module": "^3 || ^4 || ^5",
        "doctrine/orm": "^2.7.5",
        "laminas-api-tools/api-tools-provider": "^1.2",
        "laminas/laminas-coding-standard": "~2.3.0",
        "laminas/laminas-i18n": "^2.7.3",
        "laminas/laminas-log": "^2.9.1",
        "laminas/laminas-serializer": "^2.8",
        "laminas/laminas-test": "^2.6.1 || ^3.0.1 || ^4.0.0",
        "phpspec/prophecy-phpunit": "^2.0",
        "phpunit/phpunit": "^9.5.0",
        "psalm/plugin-phpunit": "^0.16 || ^0.17 || ^0.18",
        "vimeo/psalm": "^5"
    },
    "suggest": {
        "doctrine/doctrine-mongo-odm-module": "^2.0.2 || ^3.0.2 || ^4.0, if you wish to use the Doctrine ODM",
        "doctrine/doctrine-orm-module": "^3.1.1 || ^4.0 || ^5.0, if you wish to use the Doctrine ORM",
        "ext/mongo": "Mongo extension, if using ODM"
    },
    "autoload": {
        "files": [
            "src/_autoload.php"
        ],
        "psr-4": {
            "Laminas\\ApiTools\\Doctrine\\QueryBuilder\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaminasTest\\ApiTools\\Doctrine\\QueryBuilder\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    },
    "replace": {
        "zfcampus/zf-doctrine-querybuilder": "^1.8.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/datasage/api-tools-doctrine"
        }
    ]
}
